<div class="articles align-middle">
        {{#each articles}}
        <div class="card card-inverse">
            <img class="card-img" src="{{image}}" alt="Card image">
            <div class="card-img-overlay">
                <a href="{{link}}" target="_blank"><h4 class="card-title">{{title}}</h4></a>
            </div>
            <button data-id="{{_id}}" class="btn btn-outline-danger pull-right save-article" role="button">Add NomNom To List</button>
        </div>
        {{/each}}
</div>